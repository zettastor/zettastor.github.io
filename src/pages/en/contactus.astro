---
import { t, changeLanguage } from "i18next";
import Layout from "~/layouts/PageLayout.astro";
import { SITE } from "~/config.mjs";
import Picture from "~/components/core/Picture.astro";

changeLanguage("en");

const title = `Contact â€” ${SITE.name}`;
---

<Layout meta={{ title }}>
  <section class="relative">
    <div class="absolute inset-0 bg-primary-50 dark:bg-slate-800 pointer-events-none mb-32" aria-hidden="true"></div>
    <div class="relative max-w-3xl mx-auto px-4 sm:px-6">

      <div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
        <div class="mb-8 text-center">
          <h2 class="text-3xl md:text-4xl mb-4">
            {t("menu.contact")}
          </h2>
          <p class="max-w-3xl mx-auto text-center text-xl text-gray-600 dark:text-slate-400">
            {t("contact.desc")}

<!-- Begin Mailchimp Signup Form -->
<link href="//cdn-images.mailchimp.com/embedcode/classic-071822.css" rel="stylesheet" type="text/css">
<style type="text/css">
	#mc_embed_signup {
		background: #fff;
		clear: left;
		font: 14px Helvetica, Arial, sans-serif;
	}

	/* Add your own Mailchimp form style overrides in your site stylesheet or in this style block.
	   We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
</style>

<div id="mc_embed_signup">
	<form
		action="https://github.us21.list-manage.com/subscribe/post?u=e5022cd3b9c23b438bbccc33d&amp;id=51563b7dcb&amp;f_id=005dbae1f0"
		method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank"
		novalidate>
		<div id="mc_embed_signup_scroll">
			<h2>Mailing List</h2>
			<div class="mc-field-group">
				<label for="mce-EMAIL">Email:<span class="asterisk">*</span>
				</label>
				<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" required>
				<span id="mce-EMAIL-HELPERTEXT" class="helper_text"></span>
			</div>
			<div id="mce-responses" class="clear foot">
				<div class="response" id="mce-error-response" style="display:none"></div>
				<div class="response" id="mce-success-response" style="display:none"></div>
			</div>
			<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
			<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text"
					name="b_e5022cd3b9c23b438bbccc33d_51563b7dcb" tabindex="-1" value=""></div>
			<div class="optionalParent">
				<div class="clear foot">
					<input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
				</div>
			</div>
		</div>
	</form>
</div>
<script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
<script
	type='text/javascript'>(function ($) { window.fnames = new Array(); window.ftypes = new Array(); fnames[0] = 'EMAIL'; ftypes[0] = 'email'; fnames[1] = 'FNAME'; ftypes[1] = 'text'; fnames[2] = 'LNAME'; ftypes[2] = 'text'; fnames[3] = 'ADDRESS'; ftypes[3] = 'address'; fnames[4] = 'PHONE'; ftypes[4] = 'phone'; fnames[5] = 'BIRTHDAY'; ftypes[5] = 'birthday'; }(jQuery)); var $mcj = jQuery.noConflict(true);</script>
<!--End mc_embed_signup-->

          </p>
        </div>
        <div class="grid gap-6 md:grid-cols-2 my-12 dark:text-white">
          <div class="relative flex flex-col p-6 items-center justify-center bg-white dark:bg-slate-900 rounded shadow-xl hover:shadow-lg transition dark:border dark:border-slate-800 text-xl">
            <div>{t("contact.qr-desc")}</div>
            <Picture
              src={import("~/assets/images/qr.png")}
              widths={[258, 258]}
              alt="QR code"
              aspectRatio="1:1"
            />
          </div>
          <div class="relative flex flex-col p-6 bg-white dark:bg-slate-900 rounded shadow-xl hover:shadow-lg transition dark:border dark:border-slate-800 text-gray-500 dark:text-gray-400 text-md">
            <div class="flex items-center mb-4">
              <div class="ml-4 text-xl font-bold">{t("contact.title")}</div>
            </div>
            <p>{t("contact.address-label")}</p>
            <p>{t("contact.address1")}</p>
            <p class="mb-4">{t("contact.address2")}</p>
            <p>{t("contact.website-label")}<a class="hover:text-primary-600 hover:underline dark:text-gray-200" href="https://www.pengyunnetwork.cn">www.pengyunnetwork.cn</a></p>
            <p>{t("contact.support1-label")}<a class="hover:text-primary-600 hover:underline dark:text-gray-200" href="https://github.com/zettastor/dbs/issues">GitHub Issues</a></p>
            <p>{t("contact.support2-label")}<a class="hover:text-primary-600 hover:underline dark:text-gray-200" href="mailto:contact@pengyunnetwork.com">contact@pengyunnetwork.com</a></p>
          </div>
        </div>
      </div>
    </div>
  </section>
  

</Layout>
