---
import { t } from "i18next";
import { Icon } from "astro-icon";
import Picture from "~/components/core/Picture.astro";
import Diagram from "~/components/widgets/Diagram.astro";

const {} = Astro.props;
---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
  <h2 class="mb-8 text-3xl lg:text-4xl">
    {t("benefits.titlebefore")}
    <span class="pmzd bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500 whitespace-nowrap">ZettaStor DBS</span>
    {t("benefits.titleafter")}
  </h2>

  <div class="grid gap-6 row-gap-10 md:grid-cols-2">
    <div class="md:pr-16">
      <div class="flex">
        <div class="flex flex-col items-center mr-4">
          <div>
            <div class="flex items-center justify-center w-12 h-12 rounded-full border-secondary-500 border-2">
              <Icon name="carbon:network-2" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
            </div>
          </div>
          <div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
        </div>
        <div class="pt-1 pb-8">
          <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{t("benefits.title1")}</p>
          <p>{t("benefits.desc1")}</p>
        </div>
      </div>
      <div class="flex">
        <div class="flex flex-col items-center mr-4">
          <div>
            <div class="flex items-center justify-center w-12 h-12 rounded-full border-secondary-500 border-2">
              <Icon name="ant-design:money-collect-outlined" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
            </div>
          </div>
          <div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
        </div>
        <div class="pt-1 pb-8">
          <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{t("benefits.title2")}</p>
          <p>{t("benefits.desc2")}</p>
        </div>
      </div>
      <div class="flex">
        <div class="flex flex-col items-center mr-4">
          <div>
            <div class="flex items-center justify-center w-12 h-12 rounded-full border-secondary-500 border-2">
              <Icon name="ic:outline-dashboard-customize" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
            </div>
          </div>
          <div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
        </div>
        <div class="pt-1 pb-8">
          <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{t("benefits.title3")}</p>
          <p>{t("benefits.desc3")}</p>
        </div>
      </div>
      <div class="flex">
        <div class="flex flex-col items-center mr-4">
          <div>
            <div class="flex items-center justify-center w-12 h-12 rounded-full border-secondary-500 border-2">
              <Icon name="eos-icons:database-migration-outlined" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
            </div>
          </div>
          <div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
        </div>
        <div class="pt-1">
          <p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{t("benefits.title4")}</p>
          <p>{t("benefits.desc4")}</p>
        </div>
      </div>
    </div>
    <!-- <div class="relative hidden md:block">
      <Picture
        class="inset-0 object-cover object-top w-full md:h-full rounded-md shadow-lg md:absolute bg-gray-400 dark:bg-slate-700"
        src={import("~/assets/images/benefits.jpg")}
        widths={[400, 768]}
        sizes="(max-width: 768px) 100vw, 432px"
        alt="Benefits"
        aspectRatio="1140:660"
      />
    </div> -->
    <Diagram />
  </div>
</section>
